#!/bin/bash -e

# Fix storage directory permissions (running as root)
mkdir -p /rails/storage/files
chown -R rails:rails /rails/storage

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/thrust" ] && [ "${2}" == "./bin/rails" ] && [ "${3}" == "server" ]; then
  # Run db:prepare as rails user
  gosu rails bash -c "MIGRATE=1 ./bin/rails db:prepare"
fi

# Drop privileges and run the command as rails user
exec gosu rails "$@"
